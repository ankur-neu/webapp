{
    "name": "base",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "npm run build && ts-node-dev --respawn --pretty --transpile-only src/app.ts",
        "stag": "NODE_OPTIONS=--max-old-space-size=4096 nodemon src/app.ts",
        "prod": "NODE_OPTIONS=--max-old-space-size=4096 npm run build && pm2 start dist/src/app.js --name webapp --watch --ignore-watch 'node_modules'",
        "restart": "pm2 restart webapp",
        "start": "npm run build && nodemon dist/src/app.js",
        "build": "tsc --project ./",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "test": "mocha --recursive --exit"
    },
    "dependencies": {
        "aws-sdk": "2.1014.0",
        "bcryptjs": "2.4.3",
        "body-parser": "1.18.3",
        "busboy": "0.3.1",
        "chai": "4.3.4",
        "cookie-parser": "~1.4.4",
        "cors": "2.8.5",
        "debug": "~2.6.9",
        "dotenv": "10.0.0",
        "express": "4.16.4",
        "hbs": "~4.0.4",
        "helmet": "4.6.0",
        "http": "0.0.1-security",
        "http-errors": "~1.6.3",
        "joi": "17.4.2",
        "joi-to-swagger": "6.0.1",
        "jsonwebtoken": "8.5.1",
        "morgan": "1.9.1",
        "pg": "8.7.1",
        "pg-hstore": "2.3.4",
        "reflect-metadata": "0.1.13",
        "sequelize": "6.6.5",
        "sequelize-typescript": "2.1.0",
        "swagger-ui-express": "4.1.6",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "5.0.0",
        "@types/chai": "4.2.22",
        "@types/cors": "2.8.12",
        "@types/dotenv": "8.2.0",
        "@types/express": "4.17.13",
        "@types/jsonwebtoken": "8.5.5",
        "@types/mocha": "9.0.0",
        "@types/morgan": "1.9.3",
        "@types/node": "16.7.10",
        "@types/swagger-ui-express": "4.1.3",
        "@types/validator": "13.6.3",
        "i": "0.3.6",
        "mocha": "9.1.3",
        "nodemon": "2.0.12",
        "npm": "7.22.0",
        "ts-node": "10.2.1",
        "ts-node-dev": "1.1.8",
        "tslint": "6.1.3",
        "typescript": "4.4.2"
    }
}