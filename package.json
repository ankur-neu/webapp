{
    "name": "base",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "npm run build && ts-node-dev --respawn --pretty --transpile-only src/app.ts",
        "stag": "NODE_OPTIONS=--max-old-space-size=4096 nodemon src/app.ts",
        "prod": "sudo NODE_OPTIONS='--max-old-space-size = 4096 ' forever start ./forever/prod.json",
        "restart": "pm2 restart webapp",
        "start": "nodemon dist/src/app.js",
        "build": "NODE_OPTIONS='--max-old-space-size=4096' tsc --project ./",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "test": "mocha --recursive --exit"

