{
  "compilerOptions": {
    "target": "es2020",                                   
    "module": "commonjs",                              
    "resolveJsonModule": true,                        
    "outDir": "dist",                                 
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false                       
  }
}
